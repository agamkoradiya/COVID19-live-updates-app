<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AboutApp">


    <com.google.android.material.card.MaterialCardView
        android:visibility="invisible"
        android:id="@+id/first"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#25282A"
        app:cardCornerRadius="13dp"
        app:cardElevation="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/about_bg"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:padding="10dp"
            android:text="About App"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="18dp"
            android:text="We are fetching data from"/>

            <TextView
                android:onClick="source_link"
                android:linksClickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#F10202"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="18dp"
                android:text="DEPARTMENT OF HEALTH\n&amp; FAMILY WELFARE's"/>

            <TextView
                android:onClick="source_link"
                android:linksClickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="18dp"
                android:text="website."/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:visibility="visible"
        android:id="@+id/second"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#25282A"
        app:cardCornerRadius="13dp"
        app:cardElevation="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/about_bg"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Stay Connected.."
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="insta"
                    android:padding="12dp"
                    app:srcCompat="@drawable/in" />

                <ImageView
                    android:padding="12dp"
                    android:onClick="tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/tel" />

                <ImageView
                    android:padding="12dp"
                    android:onClick="git"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/git" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="version 1.0"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#fff"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>




</LinearLayout>